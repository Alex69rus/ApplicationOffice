@model ApplicationOffice.Sso.IdentityServer.Controllers.Account.ChangePasswordViewModel

<div class="login-page">
    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">
                    <h2>Смена пароля</h2>
                </div>
                <div class="card-body">
                    <partial name="_ValidationSummary" />
                    <form asp-route="ChangePassword">
                        <input type="hidden" asp-for="BackUrl" />

                        <div class="form-group">
                            <label asp-for="Password">Текущий пароль</label>
                            <input type="password" class="form-control" placeholder="Текущий пароль" asp-for="Password"
                                autofocus autocomplete="off">
                        </div>
                        <div class="form-group">
                            <label asp-for="NewPassword">Новый пароль</label>
                            <input type="password" class="form-control" placeholder="Новый пароль" asp-for="NewPassword"
                                autocomplete="off">
                        </div>
                        <div class="form-group">
                            <label asp-for="NewPasswordDublicate">Повторите новый пароль</label>
                            <input type="password" class="form-control" placeholder="Новый пароль" asp-for="NewPasswordDublicate"
                                autocomplete="off">
                        </div>
                        <button class="btn btn-primary" name="button" value="change">Сменить</button>
                        <button class="btn btn-secondary" name="button" value="cancel">Отмена</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>